{% extends 'base.html.twig' %}

{% block title %}Корзина{% endblock %}

{% block body %}
    <div id="cart-items">
        {% for cart_item in cart_items %}
            <div class="card" style="width: 11rem">
                <img src="{{ cart_item.product.imageLink }}" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title small">{{ cart_item.product.brand }}</h5>
                    <h5 class="card-title small">{{ cart_item.product.price }}р.</h5>
                    <p class="card-text small">{{ cart_item.product.name }}</p>
                    <a href="{{ path('cart_remove_item', { item_id: cart_item.id }) }}" class="btn btn-danger">Удалить из корзины</a>
                </div>
            </div>
        {% endfor %}
    </div>

    <div id="cart-action-buttons">
        <a href="{{ path('order_create') }}" class="btn btn-primary create_order-btn">Оформить заказ</a>
        <a href="{{ path('order_my_orders') }}" class="btn btn-success create_order-btn">Мои заказы</a>
    </div>
{% endblock %}
