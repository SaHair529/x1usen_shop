{% extends 'base.html.twig' %}
{% block body %}

    <div id="search-response">
        {% include 'pieces/details-tree.html.twig' with {'detail_groups': detail_groups, 'vehicle': vehicle} %}
        <div id="details-window">
            <div class="details404">
                <p class="details404icon">
                    Выберите узел слева
                </p>
            </div>
        </div>
        <div id="product-info-modal" class="hidden close-product-modal">
            <div class="inner">
                <h5 class="price"></h5>
                <p class="name"></p>
                <a href="#" class="detail-link">Подробнее о товаре</a>
                <div class="product-info-modal-buttons">
                    <button type="button" class="btn btn-primary add-to-cart">В корзину</button>
                </div>
            </div>
        </div>
        <div id="not-authorized-alert-modal" class="hidden close-not-authorized-modal">
            <div class="inner">
                <h5>Требуется авторизация</h5>
                <p>
                    Для добавления товара в корзину требуется авторизация
                </p>
                <a class="btn btn-outline-dark" href="{{ path('app_register') }}" role="button">Регистрация</a>
                <a class="btn btn-dark" href="{{ path('app_login') }}" role="button">Вход</a>
            </div>
        </div>
        <div id="detail-image-modal" class="hidden custom-modal detail-image-modal action-close-modal">
            <img src="" alt="Деталь">
        </div>
    </div>
{% endblock %}
