{% extends 'base.html.twig' %}

{% block title %}Регистрация физ. лица{% endblock %}

{% block body %}
    <div class="login-form-container">
        {{ form_start(registrationForm) }}
        <h4 class="mb-3 font-weight-normal">Регистрация физ. лица</h4>
        <div class="btn-group w-100">
            <a href="#" class="btn btn-lg disabled">Физ. лицо</a>
            <a href="{{ path('app_register_jur') }}" class="btn btn-lg btn-dark">Юр. лицо</a>
        </div>
        {{ form_row(registrationForm.name, {'placeholder': 'Имя'}) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.plainPassword) }}

        <button type="submit" class="btn btn-lg btn-dark">Зарегистрироваться</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
